<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="2"
    android:paddingTop="@dimen/padding_medium"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium"
    android:background="@drawable/scroll_view_background">

    <TextView
        android:id="@+id/message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение 1"
        android:padding="@dimen/padding_small"
        android:layout_row="0"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/message_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение 2"
        android:padding="@dimen/padding_small"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/message_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение 3"
        android:padding="@dimen/padding_small"
        android:layout_row="2"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/message_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение 4"
        android:padding="@dimen/padding_small"
        android:layout_row="3"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/message_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщение 5"
        android:padding="@dimen/padding_small"
        android:layout_row="4"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:padding="@dimen/padding_small"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textCapSentences"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_size"
        android:text="Send"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center_vertical"/>

</GridLayout>